    pod 'RxBluetoothKit', '~> 5.0'
    pod 'RxSwift', '~> 4.0'
    pod 'RxCocoa', '~> 4.0'
    pod 'SwiftyTimer', '~> 2.0'
    pod 'Files', '~> 2.0.0'
    pod 'PromiseKit/CorePromise', '~> 6.0'
    pod 'NaptimeFileProtocol', :git => "git@github.com:EnterTech/Naptime-FileProtocol-iOS.git", :branch => "develop"

end
